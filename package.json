{
  "name": "@ffhub.io/n8n-nodes-ffhub",
  "version": "0.1.0",
  "description": "n8n node for FFHub - Cloud FFmpeg transcoding service",
  "keywords": [
    "n8n-community-node-package",
    "ffmpeg",
    "video",
    "transcoding",
    "ffhub"
  ],
  "license": "MIT",
  "homepage": "https://ffhub.io",
  "author": {
    "name": "FFHub",
    "url": "https://ffhub.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ffhub-io/n8n-nodes-ffhub.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials --ext .ts --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/FFHubApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/FFHub/FFHub.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "^1.20.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0"
  }
}
